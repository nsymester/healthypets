<nav class="navbar bg-primary navbar-bright navbar-expand">
  <div class="container-fluid">

    <!-- Brand -->
    <a href="#" class="navbar-brand">
      <img src="/images/logo.png" style="width:100px;" alt="Healthy Pets logo">
    <span class="d-none">Healthy Pets</span></a>

    <!-- Telephone number -->
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="tel:01730268592">01730 268592</a>
    </div>
  </div><!-- container -->
</nav>

<nav class="navbar bg-primary navbar-bright navbar-expand" style="opacity: 0.8;">
  <div class="container-fluid" style="height: 27px;">
    <div class="navbar-nav">
      <a href="#" class="nav-item nav-link">Claims</a>
      <a href="#" class="nav-item nav-link">Contact Us</a>
    </div><!-- navbar-nav -->

    <div class="navbar-nav">
      <button href="#" class="btn btn-lg btn-cta rounded-0" role="button" style="right:-16px;position: relative; text-transform: uppercase;font-size:1rem">Get a quote</button>
    </div><!-- navbar-nav -->
  </div><!-- container -->
</nav>

<div class="container">
  <section class="mt-4 mb-3">
    <h2 style="font-weight:normal;color: rgba(0,59,92,1);font-family: 'Open Sans'; font-size: 42px;line-height: 57px;">Retrieve a quote</h2>
    <form action="">
      <fieldset class="form-group mt-3">
        <legend></legend>

        <div class="form-group">
          <label class="form-control-label" for="pets-name">Your pet's name</label>
          <input class="form-control rounded-0" type="text" id="pets-name">
        </div><!-- form-group -->

        <div class="form-group">
          <label class="form-control-label" for="surname">Your surname</label>
          <input class="form-control rounded-0" type="text" id="surname">
        </div><!-- form-group -->

        <div class="form-group">
          <label class="form-control-label" for="postcode">Your postcode</label>
          <input class="form-control rounded-0" type="text" id="postcode">
        </div><!-- form-group -->
      </fieldset><!-- fieldset -->

      <button class="btn btn-primary btn-block rounded-0 btn-primary-alt" type="submit">Find quote</button>
    </form>
  </section>

  <section class="mt-5">
    <h3 class="d-none">Info</h3>

    <section class="card mb-5 border-0 rounded-0 shadow p-3 mb-5 bg-white" style="border-left: 11.11px solid rgba(90,167,0,1) !important;">
        <h3>20% off for all new customers</h3>
        <p>Get the best deal online</p>
        <p>This will automatcally get added</p>
    </section>

    <section class="card mb-5 border-0">
      <div class="rating">
        <span>&#9733;</span>
        <span>&#9733;</span>
        <span>&#9733;</span>
        <span>&#9733;</span>
        <span>&#9733;</span>
        <p style="display:inline" class="rating__value">4.7/5</p>
      </div>
      <p>Independent service rating based on 1311 verified reviews</p>
      <hr class="mt-0 bg-dark">
      <div class="clearfix">
        <img class="img-fluid" src="/images/feefo.png" alt="Feefo logo" style="width:150px">
        <a href="" class="rating__reviews float-right">Read all reviews</a>
      </div>
    </section>
  </section>
</div>

