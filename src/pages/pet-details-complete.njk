{% block headerContent %}
{% import './macros/header.njk' as header %}
{{ header.title('Pet Details') }}
{% endblock %}

  <!-- Bootstrap -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom -->
  <link href="/css/styles.css" rel="stylesheet">

{% block ie8supporthtml %}
{% include './partials/ie8-support-html.njk' %} {% endblock %}

{% block menu %}
{% import './macros/menu.njk' as menu %}
{{ menu.data('pet details') }}
{% endblock %}

<div class="container">
  <section class="mt-4 mb-3">

    {% block progressBar %}
    {% import './macros/progress-bar.njk' as progressBar %}
    {{ progressBar.activeStep('pet-details') }}
    {% endblock %}

    <section class="card pet-summary mb-3 rounded-0 shadow bg-white">
      <h5 class="pet-summary__header">Bobby, German Shepherd, 3 yrs</h5>
      <div class="pet-summary__items">
        <a class="pet-summary__link" href="">Edit Bobby's Info</a>
        <a class="pet-summary__link" href="">Delete</a>
      </div>
    </section>

    <section class="card pet-summary mb-3 rounded-0 shadow bg-white">
      <h5 class="pet-summary__header">Poppy, Russian Blue, 6 yrs</h5>
      <div class="pet-summary__items">
        <a class="pet-summary__link" href="">Edit Poppy's Info</a>
        <a class="pet-summary__link" href="">Delete</a>
      </div>
    </section>

    <form action="">

      <div class="mt-4">
        {% block nextButton %}
        {% import './macros/next-button.njk' as nextButton %}
        {{ nextButton.nextStep('Next', 'your-details') }}
        {% endblock %}
      </div>
      <button class="btn btn-outline-primary btn-outline-primary--alt btn--block rounded-0" type="submit">+ Add another pet</button>

    </form>
  </section>

  {% block customerservice %}
  {% import './macros/customer-service.njk' as customerService %}
  {{ customerService.provision({
    'discount': true,
    'feefo': true
  })}}
  {% endblock %}

</div><!-- container -->

{% block corejavascript %}
{% include './partials/bootstrap-core-javascript.njk' %} {% endblock %}

{% block footer %}
{% include './partials/footer.njk' %} {% endblock %}