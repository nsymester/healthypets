{% block headerContent %}
{% import './macros/header.njk' as header %}
{{ header.title('Policy Summary') }}
{% endblock %}

  <!-- Bootstrap -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom -->
  <link href="/css/styles.css" rel="stylesheet">

{% block ie8supporthtml %}
{% include './partials/ie8-support-html.njk' %} {% endblock %}

{% block menu %}
{% import './macros/menu.njk' as menu %}
{{ menu.data('payment summary') }}
{% endblock %}

<div class="container">
  <section class="mt- mb-1">
    <div class="policy-summary__header d-flex justify-content-between mb-0">
      <h2 class="mt-0">Policy summary</h2>
      <h2>£37.78<small>/month</small></h2>
    </div>
    <hr class="mt-0 mb-4">

    {% block progressBar %}
    {% import './macros/progress-bar-summary.njk' as progressBar %}
    {{ progressBar.activeStep('payment', true) }}
    {% endblock %}

    <form action="">
      <fieldset class="mt-0 mb-0">
        <legend></legend>

        <div class="form-group">
          <label class="form-control-label mt-2" for="">How regularly do you want to pay?</label>
          <div class="form-check-flex">
            <div class="form-check form-check-inline radio-button-box">
              <input class="form-check-input radio-button-box__input" type="radio" name="regular-pay" id="regular-pay-monthly" value="monthly" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="directDebitDetails">
              <label class="form-check-label radio-button-box__label radio-button-box__label--double-line" for="regular-pay-monthly"><span>Monthly</span><span>£37.79</span></label>
            </div><!-- form-check -->

            <div class="form-check form-check-inline radio-button-box">
              <input class="form-check-input radio-button-box__input" type="radio" name="regular-pay" id="regular-pay-annually" value="annually" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="paymentType">
              <label class="form-check-label radio-button-box__label radio-button-box__label--double-line" for="regular-pay-annually"><span>Annually</span><span>£466.12</span></label>
            </div><!-- form-check -->
          </div>
        </div><!-- form-group -->

        <small class="form__help w-50" style="text-align:center;"><a href="" style="text-decoration:none;">Free direct debiting</a></small>

        <div class="collapse" id="paymentType">
          <div class="form-group">
            <label class="form-control-label mt-2" for="">How would you like to pay?</label>
            <div class="form-check-flex">

              <div class="form-check form-check-inline radio-button-box">
                <input class="form-check-input radio-button-box__input" type="radio" name="payment-type" id="payment-type-debit" value="debit" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="creditCardDetails">

                <label class="form-check-label radio-button-box__label radio-button-box__label--single-line" for="payment-type-debit"><span>Direct Debit</span></label>
              </div><!-- form-check -->

              <div class="form-check form-check-inline radio-button-box">
                <input class="form-check-input radio-button-box__input" type="radio" name="payment-type" id="payment-type-credit" value="credit" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="creditCardDetails">

                <label class="form-check-label radio-button-box__label radio-button-box__label--single-line" for="payment-type-credit"><span>Credit/Debit Card</span></label>
              </div><!-- form-check -->
            </div>
          </div><!-- form-group -->

          <small class="form__help w-50" style="text-align:center;"><a href="" style="text-decoration:none;">Free direct debiting</a></small>

          <div class="collapse mt-4 mb-4" id="creditCardDetails">

            <div class="form-group mb-4">
              <label class="form-control-label" for="cardName">Name on Card</label>
              <input class="form-control rounded-0" type="text" id="cardName">
            </div><!-- form-group -->

            <div class="form-group">
              <label class="form-control-label" for="cardNumber1">Card Number</label>
              <div class="form-group--sortcode d-flex">
                <input class="form-control rounded-0" maxlength="2" type="text" id="cardNumber1" onkeypress="return isNumberKey(event)" >
                <input class="form-control rounded-0" maxlength="2" type="text" id="cardNumber2" onkeypress="return isNumberKey(event)" >
                <input class="form-control rounded-0" maxlength="2" type="text" id="cardNumber3" onkeypress="return isNumberKey(event)" >
                <input class="form-control rounded-0" maxlength="2" type="text" id="cardNumber4" onkeypress="return isNumberKey(event)" >
              </div>
            </div><!-- form-group -->

            <div class="form-group">
              <label class="form-control-label mt-2 mb-0" for="expiryDate">Expiry date</label>
              <div class="input-group mb-2">
                <div class="input-group-prepend input-group-prepend--date mt-2">
                  <div class="input-group-text" style="height: 45px;"><img class="img__calendar" src="/images/calendar.svg" alt=""></div>
                </div>
                <input class="form-control rounded-0 mt-2 form__input--short" type="date" id="expiryDate" placeholder="dd/mm/yyyy" size="25">
              </div>
            </div><!-- form-group -->

            <div class="form-group">
              <label class="form-control-label" for="ccv">CCV</label>
              <input class="form-control rounded-0 form-control--ccv" type="text" maxlength="3" id="ccv" onkeypress="return isNumberKey(event)">
            </div><!-- form-group -->

            <p class="h6 mt-4 font-weight-bold">Billing address</p>
            <p> 1 Street Name, Town, Postcode</p>
            <p><a href="">Edit address</a>
          </div><!-- collapse -->

        </div><!-- collapse -->


        <div class="collapse mt-4 mb-4" id="directDebitDetails">

          <p class="h5 mb-4">Your direct debit will come out on the <strong>5th of the month</strong></p>
          <div class="form-group mb-4">
            <label class="form-control-label" for="accName">Account holder's name</label>
            <input class="form-control rounded-0" type="text" id="accName">
          </div><!-- form-group -->

          <div class="form-group">
            <label class="form-control-label" for="sortCode1">Sort code</label>
            <div class="form-group--sortcode d-flex">
              <input class="form-control rounded-0" maxlength="2" type="text" id="sortCode1" onkeypress="return isNumberKey(event)" >
              <input class="form-control rounded-0" maxlength="2" type="text" id="sortCode2" onkeypress="return isNumberKey(event)" >
              <input class="form-control rounded-0" maxlength="2" type="text" id="sortCode3" onkeypress="return isNumberKey(event)" >
            </div>
          </div><!-- form-group -->

          <div class="form-group">
            <label class="form-control-label" for="accNumber">Account number</label>
            <input class="form-control rounded-0" type="number" id="accNumber">
          </div><!-- form-group -->

          <div class="card p-4">
            <div class="d-flex justify-content-around mb-3">
              <small>The Direct Debit Guarantee</small>
              <img src="/images/direct-debit.png" class="img-fluid" alt="Direct Bebit logo" style="width: 25%;height: 25%;">
            </div>
            <ul class="ml-0" style="padding-left: 1.5rem; font-size:0.9rem; font-weight:100;">
              <li>This Guarantee is offered by all Banks and Building Societies that accept instructions to pay Direct Debits. </li>
              <li>If there are any changes to the amount, date or frequency of your Direct Debit, Healthy Pets will notify you 10 working days in advance of your  </li>
             </ul>
          </div>

        </div><!-- collapse -->


        <div class="cost-group mt-5">
          <h5 class="cost-group__header--total">Total including <br>20% discount</h5>
          <div class="">
            <p class="cost-group__total-item">£37.78</p>
            <small class="cost-group__period">per month</small>
          </div>
        </div>

      </fieldset>
    </form>
  </section>

  <div class="mt-4">
    {% block nextButton %}
    {% import './macros/next-button.njk' as nextButton %}
    {{ nextButton.nextStep('Confirm & Pay', 'payment-complete') }}
    {% endblock %}
  </div>

  {% block customersecurity %}
  {% include './partials/thwate.njk' %} {% endblock %}

  {% block customerservice %}
  {% import './macros/customer-service.njk' as customerService %}
  {{ customerService.provision({
    'discount': false,
    'feefo': true
  })}}
  {% endblock %}

</div><!-- container -->

{% block corejavascript %}
{% include './partials/bootstrap-core-javascript.njk' %} {% endblock %}

{% block footer %}
{% include './partials/footer.njk' %} {% endblock %}