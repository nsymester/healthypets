{% block header %}
{% include './partials/header.njk' %} {% endblock %}

  <!-- Bootstrap -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom -->
  <link href="/css/styles.css" rel="stylesheet">

{% block ie8supporthtml %}
{% include './partials/ie8-support-html.njk' %} {% endblock %}

{% block menu %}
{% include './partials/menu.njk' %} {% endblock %}

<div class="container">
  <section class="mt-4 mb-3">

    <ul class="progressbar clearfix">
      <li class="complete"><span>Pet details</span></li>
      <li class="active"><span>Your details<span></li>
      <li><span>Your quote</span></li>
    </ul>

    <h2 class="mt-0 mb-0">Enter your pet's details</h2>
    <form action="">
      <fieldset class="form-group mt-0">
        <legend></legend>

        <div class="form-group">
          <label class="form-control-label" for="pets-name">What's your pet's name?</label>
          <input class="form-control rounded-0" type="text" id="pets-name">
        </div><!-- form-group -->

        <div class="form-group">
          <label class="form-control-label mt-2 mb-0" for="dob">What's your pet's birthday?</label>
          <small class="form__help">If you don't know the exact date of birth, enter the vet's estimate</small>
          <div class="input-group mb-2">
            <div class="input-group-prepend input-group-prepend--date mt-2">
              <div class="input-group-text"><img class="img__calendar" src="/images/calendar.svg" alt=""></div>
            </div>
            <input class="form-control rounded-0 mt-2 form-control--short" type="date" id="dob" placeholder="dd/mm/yyyy" size="25">
          </div>
        </div><!-- form-group -->

        <div class="form-group">
          <label class="form-control-label mt-1" for="">Is your pet a dog or a cat?</label>
          <div style="display:flex; justify-content:space-between;">
            <div class="form-check form-check-inline form-check-radio--icon">
              <input class="form-check-input" type="radio" name="pet-type" id="pet-type-dog" value="Dog">
              <label class="form-check-label radio-box--icon" for="pet-type-dog"><span>Dog</span></label>
            </div><!-- form-check -->

            <div class="form-check form-check-inline form-check-radio--icon">
              <input type="radio" class="form-check-input" name="pet-type" id="pet-type-cat" value="Cat">
              <label class="form-check-label radio-box--icon" for="pet-type-cat"><span>Cat</span></label>
            </div><!-- form-check -->
          </div>
        </div><!-- form-group -->

        <div class="form-group">
          <label class="form-control-label mt-1" for="">What's your pets sex?</label>
          <div style="display:flex; justify-content:space-between;">
            <div class="form-check form-check-inline form-check-radio">
              <input class="form-check-input" type="radio" name="gender" id="gender-male" value="Male">
              <label class="form-check-label radio-box" for="gender-male"><span>Male</span></label>
            </div><!-- form-check -->

            <div class="form-check form-check-inline form-check-radio">
              <input type="radio" class="form-check-input" name="gender" id="gender-female" value="Female">
              <label class="form-check-label radio-box" for="gender-female"><span>Female</span></label>
            </div><!-- form-check -->
          </div>
        </div><!-- form-group -->    

        <div class="form-group">
          <label class="form-control-label mt-2" for="">Is your pet neutered?</label>
          <small class="form__help mb-1">Once insured, if this changes just let us know.</small>
          <div style="display:flex; justify-content:space-between;">
            <div class="form-check form-check-inline form-check-radio">
              <input class="form-check-input" type="radio" name="neutered" id="gender-male" value="neutered">
              <label class="form-check-label radio-box" for="neutered-no"><span>Neutered</span></label>
            </div><!-- form-check -->

            <div class="form-check form-check-inline form-check-radio">
              <input type="radio" class="form-check-input" name="neutered" id="gender-female" value="not-neutered">
              <label class="form-check-label radio-box" for="neutered-no"><span>Not neutered</span></label>
            </div><!-- form-check -->
          </div>
        </div><!-- form-group --> 

        <div class="form-group">
          <label class="form-control-label mt-2" for="donation">How much did you pay or donate for your Pet?</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend input-group-prepend--currency">
              <span class="input-group-text">Â£</span>
            </div>
            <input class="form-control rounded-0 form-control--short" type="text" id="donation">
          </div><!-- input-group -->
        </div><!-- form-group --> 

      </fieldset><!-- fieldset -->

      <button class="btn btn-primary btn-primary-alt btn-block rounded-0" type="submit">Find quote</button>
    </form>
  </section>

  {% block customerservice %}
  {% include './partials/customer-service.njk' %} {% endblock %}

</div><!-- container -->

