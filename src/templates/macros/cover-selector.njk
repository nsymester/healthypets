{% macro type(data) %}
{% set coverLevels = data.coverLevels %}
        <section>
          <h6 class="cover-level__h6">Select your level of cover</h6>

          <ul class="nav nav-underlines justify-content-around mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="pills-cover1-tab" data-toggle="pill" href="#pills-cover1" role="tab" aria-controls="pills-cover1" aria-selected="true">£2000 Cover</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="pills-cover2-tab" data-toggle="pill" href="#pills-cover2" role="tab" aria-controls="pills-cover2" aria-selected="false">£4250 Cover</a>
            </li>
          </ul>
          <div class="tab-content" id="pills-tabContent">

            <div class="tab-pane fade show active" id="pills-cover1" role="tabpanel" aria-labelledby="pills-cover1-tab">

              {% block coverContent1 %}
              {% import './cover-level.njk' as cover1 %}
              {{ cover1.level( 
                  { 
                    'price':'£2000', 
                    'cover':'Lifetime' 
                  } 
                 ) 
               }}
              {% endblock %}
            </div><!-- tab-pane -->

            <div class="tab-pane fade" id="pills-cover2" role="tabpanel" aria-labelledby="pills-cover2-tab">
              {% block coverContent2 %}
              {% import './cover-level.njk' as cover2 %}
              {{ cover2.level( 
                  { 
                    'price':'£4250', 
                    'cover':'Lifetime' 
                  } 
                 ) 
               }}
              {% endblock %}
            </div><!-- tab-pane -->
          </div><!-- tab-content -->
        </section>

        {% block modalContent %}
        {% import './modal.njk' as modal %}
        {{ modal.info( 
          { 
            'price':'£2000', 
            'cover':'Lifetime' 
          } 
          ) 
        }}
        {% endblock %}

{% endmacro %}