{% macro type(data) %}
  <section>
    <h6 class="cover-level__h6">Select your level of cover</h6>

    <ul class="nav nav-underlines justify-content-around mb-3" id="pills-tab" role="tablist">
    {% if data['1'] %}
      <li class="nav-item">
        <a class="nav-link active" id="pills-cover-1-tab" data-toggle="pill" href="#pills-cover-1" role="tab" aria-controls="pills-cover-1" aria-selected="true">{{ data['1'] }} Cover</a>
      </li>
    {% endif %}

    {% if data['2'] %}
      <li class="nav-item">
        <a class="nav-link" id="pills-cover-2-tab" data-toggle="pill" href="#pills-cover-2" role="tab" aria-controls="pills-cover-2" aria-selected="false">{{ data['2'] }} Cover</a>
      </li>
    {% endif %}

    {% if data['3'] %}
      <li class="nav-item">
        <a class="nav-link" id="pills-cover-3-tab" data-toggle="pill" href="#pills-cover-3" role="tab" aria-controls="pills-cover-3" aria-selected="false">{{ data['3'] }} Cover</a>
      </li>
    {% endif %}

    {% if data['4'] %}
      <li class="nav-item">
        <a class="nav-link active" id="pills-cover-4-tab" data-toggle="pill" href="#pills-cover-4" role="tab" aria-controls="pills-cover-4" aria-selected="false">{{ data['4'] }} Cover</a>
      </li>
    {% endif %}
    </ul>
    <div class="tab-content" id="pills-tabContent">

      {% block coverContent %}
      {% import './cover-level.njk' as cover %}

      <div class="tab-pane fade show active" id="pills-cover-1" role="tabpanel" aria-labelledby="pills-cover-1-tab">

        {% if data['1'] %}
        {{ cover.level(
            {
              'price':'£2000',
              'cover': data.cover
            }
            )
          }}
          {% endif %}
      </div><!-- tab-pane -->

      <div class="tab-pane fade" id="pills-cover-2" role="tabpanel" aria-labelledby="pills-cover-2-tab">

        {% if data['2'] %}
        {{ cover.level(
            {
              'price':'£4250',
              'cover': data.cover
            }
            )
          }}
          {% endif %}
      </div><!-- tab-pane -->

      <div class="tab-pane fade" id="pills-cover-3" role="tabpanel" aria-labelledby="pills-cover-3-tab">

        {% if data['3'] %}
        {{ cover.level(
            {
              'price':'£7500',
              'cover': data.cover
            }
            )
          }}
          {% endif %}
      </div><!-- tab-pane -->

      <div class="tab-pane fade show" id="pills-cover-4" role="tabpanel" aria-labelledby="pills-cover-4-tab">

        {% if data['4'] %}
        {{ cover.level(
            {
              'price':'1000',
              'cover': data.cover
            }
            )
          }}
          {% endif %}
      </div><!-- tab-pane -->

      {% endblock %}

    </div><!-- tab-content -->
  </section>

  {% block modalContent %}
  {% import './modal.njk' as modal %}
  {{ modal.info(
    {
      'price':'£2000',
      'cover': data.cover
    }
    )
  }}
  {% endblock %}

{% endmacro %}