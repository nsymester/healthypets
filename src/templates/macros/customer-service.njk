{% macro provision(data)%}
  <section class="customer-service">
    <h3 class="d-none">Customer Service</h3>

    <div class="row justify-content-between align-items-end">
      {% if data.discount %}
      <div class="col-md-6 col-lg-5">
        <section class="card business-offer mb-5 border-0 rounded-0 shadow p-3 mb-5 bg-white">
            <h5 class="mb-0 font-weight-bold">20% off for all new customers</h5>
            <p>Get the best deal online</p>
            <p>This will automatcally get added</p>
        </section>
      </div><!-- col -->
      {% endif %}

      {% if data.feefo %}
      <div class="col-md-6 col-lg-5">
        <section class="card mb-5 border-0 bg-transparent">
          <div class="feefo-rating">
            <span>&#9733;</span>
            <span>&#9733;</span>
            <span>&#9733;</span>
            <span>&#9733;</span>
            <span>&#9733;</span>
            <p class="feefo-rating__value">4.7/5</p>
          </div>
          <p>Independent service rating based on 1311 verified reviews</p>
          <hr class="mt-0 bg-dark">
          <div class="clearfix">
            <img class="img-fluid" src="/images/feefo.png" alt="Feefo logo" style="width:100px">
            <a href="" class="feefo-rating__link float-right">Read all reviews</a>
          </div>
        </section>
      </div>
      {% endif %}
    </div><!-- row -->

  </section>
{% endmacro %}